<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/ivcuahang_khachhang_nearme_viewpager_rv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />

    <TextView
        android:id="@+id/tvtencuahang_khachhang_nearme_viewpager_rv"
        android:layout_toRightOf="@id/ivcuahang_khachhang_nearme_viewpager_rv"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="aaaaaaa"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvdiachi_khachhang_nearme_viewpager_rv"
        android:layout_toRightOf="@id/ivcuahang_khachhang_nearme_viewpager_rv"
        android:layout_below="@id/tvtencuahang_khachhang_nearme_viewpager_rv"
        android:textSize="10sp"
        android:textColor="@color/secondary_text"
        android:text="aaaaa"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>