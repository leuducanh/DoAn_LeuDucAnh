<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="leu.doan_datdoan.fragment.cuahang.CuaHang_ThongTinCuaHangFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_thongtincuahangfragment"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/ivanhcuahang_cuahang_thongtincuahangfragment"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <RelativeLayout
                android:id="@+id/rlcapnhap_cuahang_thongtincuahangfragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv1_cuahang_thongtincuahangfragment"
                    android:background="@drawable/ic_store_primary_24dp"
                    android:layout_alignTop="@+id/edten_cuahang_thongtincuahangfragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/iv1_cuahang_thongtincuahangfragment"
                    android:id="@+id/edten_cuahang_thongtincuahangfragment"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="Tên cửa hàng"
                    android:inputType="textShortMessage"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv2_cuahang_thongtincuahangfragment"
                    android:background="@drawable/ic_phone_in_talk_primary_24dp"
                    android:layout_alignTop="@+id/edsdt_cuahang_thongtincuahangfragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/iv2_cuahang_thongtincuahangfragment"
                    android:id="@+id/edsdt_cuahang_thongtincuahangfragment"
                    android:layout_below="@+id/edten_cuahang_thongtincuahangfragment"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="Số điện thoại"
                    android:inputType="number"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv3_cuahang_thongtincuahangfragment"
                    android:background="@drawable/ic_edit_location_primary_24dp"
                    android:layout_alignTop="@+id/tvdiadiem_cuahang_thongtincuahangfragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/iv2_cuahang_thongtincuahangfragment"
                    android:id="@+id/tvdiadiem_cuahang_thongtincuahangfragment"
                    android:layout_below="@+id/edsdt_cuahang_thongtincuahangfragment"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="Địa điểm"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv4_cuahang_thongtincuahangfragment"
                    android:background="@drawable/ic_timer_primary_24dp"
                    android:layout_alignTop="@+id/tvthoigianmocua_cuahang_thongtincuahangfragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/iv2_cuahang_thongtincuahangfragment"
                    android:id="@+id/tvthoigianmocua_cuahang_thongtincuahangfragment"
                    android:layout_below="@+id/tvdiadiem_cuahang_thongtincuahangfragment"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="Thời gian mở cửa"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv5_cuahang_thongtincuahangfragment"
                    android:background="@drawable/ic_timer_off_primary_24dp"
                    android:layout_alignTop="@+id/tvthoigiandongcua_cuahang_thongtincuahangfragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/iv2_cuahang_thongtincuahangfragment"
                    android:id="@+id/tvthoigiandongcua_cuahang_thongtincuahangfragment"
                    android:layout_below="@+id/tvthoigianmocua_cuahang_thongtincuahangfragment"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:hint="Thời gian đóng cửa"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:background="@drawable/corner_timdiadiemkhac_button"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:id="@+id/ln_cuahang_thongtincuahangfragment"
                    android:layout_below="@+id/tvthoigiandongcua_cuahang_thongtincuahangfragment"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvchondiadiem_cuahang_thongtincuahangfragment"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:text="Xác định địa điểm trên bản đồ  "
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_search_primary_24dp"
                    android:layout_width="12sp"
                    android:layout_height="12sp" />
                </LinearLayout>




                <ScrollView
                    android:id="@+id/sv_cuahang_thongtincuahangfragment"
                    android:layout_margin="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/ln_cuahang_thongtincuahangfragment"
                    android:isScrollContainer="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <EditText
                        android:paddingTop="5dp"
                        android:id="@+id/edmota_cuahang_thongtincuahangfragment"
                        android:hint="+ Thông tin"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left|top"
                        android:inputType="textAutoComplete|textMultiLine"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="80dp"
                        android:background="@drawable/border_edittext" />
                </ScrollView>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvluuketqua_cuahang_thongtincuahangfragment"
                    android:background="@drawable/riple_button_save_thongtincuahangfragment"
                    android:text="Lưu kết quả"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#ffff"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/sv_cuahang_thongtincuahangfragment"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_cuahang_thongtincuahangfragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"

        app:layout_anchor="@id/appbar_thongtincuahangfragment"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_photo_camera_white_24dp"/>
</android.support.design.widget.CoordinatorLayout>