<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="leu.doan_datdoan.activity.XemCuaHangActivity">

    <com.amar.library.ui.StickyScrollView
        android:id="@+id/stickysv_khachhang_xemchitietcuahangfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:stickyHeader="@+id/rvloaihang_khachhang_xemchitietcuahangfragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rltinhkhoangcach_khachhang_xemchitietcuahangfragment"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivcuahang_khachhang_xemchitietcuahangfragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
                <TextView
                    android:id="@+id/tvtencuahang_khachhang_xemchitietcuahangfragment"
                    android:layout_below="@+id/ivcuahang_khachhang_xemchitietcuahangfragment"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:id="@+id/lnldiachi_khachhang_xemchitietcuahangfragment"
                    android:layout_below="@+id/tvtencuahang_khachhang_xemchitietcuahangfragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_toLeftOf="@+id/tvkhoangcanhcuahang_khachhang_xemchitietcuahangfragment"
                        android:id="@+id/tvdiachicuahang_khachhang_xemchitietcuahangfragment"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="abc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tvkhoangcanhcuahang_khachhang_xemchitietcuahangfragment"
                        android:textColor="#1f000000"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:gravity="right|center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvhoatdongcuahang_khachhang_xemchitietcuahangfragment"
                    android:layout_below="@+id/lnldiachi_khachhang_xemchitietcuahangfragment"
                    android:layout_alignParentRight="true"
                    android:textColor="#04fa10"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:text="Mở cửa"
                    android:layout_width="90dp"
                    android:layout_height="25dp" />

                <LinearLayout
                    android:id="@+id/lnlhoatdongcuahang_khachhang_xemchitiethangfragment"
                    android:background="@drawable/corner_phigiaohang"
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_below="@+id/tvhoatdongcuahang_khachhang_xemchitietcuahangfragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Phí Giao Hàng"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvphigiaohang_khachhang_xemchitietcuahangfragment"
                        android:text="Phí Giao Hàng"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvloaihang_khachhang_xemchitietcuahangfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:tag="sticky" />

            <TextView
                android:layout_width="match_parent"

                android:layout_height="1dp"
                android:background="#95313335" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvmathang_khachhang_xemchitietcuahangfragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v4.widget.NestedScrollView>
            <!-- other children -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#50ff0101" />
        </LinearLayout>

    </com.amar.library.ui.StickyScrollView>

    <RelativeLayout
        android:id="@+id/rl_khachhang_xemchitietcuahangfragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/giohang">

        <ImageView
            android:id="@+id/ivgiohang_xemchitietcuahang"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_local_grocery_store_white_24dp" />

        <TextView
            android:id="@+id/tvtonggia_khachhang_xemchitietcuahangfragment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivgiohang_xemchitietcuahang"
            android:gravity="center"
            android:text="ABC"
            android:textColor="#ffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_d_dathang"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvtonggia_khachhang_xemchitietcuahangfragment"
            android:text="đ"
            android:textColor="#ffff"
            android:textSize="10dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvxoagiohang_khachhang_xemchitietcuahangfragment"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btndathang_khachhang_xemchitietcuahangfragment"
            android:gravity="center"
            android:text="Xóa"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:visibility="gone"
            android:id="@+id/btndathang_khachhang_xemchitietcuahangfragment"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ripple_rltieptheo"
            android:gravity="center"
            android:text="Tiếp tục"
            android:textAlignment="center"
            android:textColor="#fff" />

    </RelativeLayout>
</RelativeLayout>
