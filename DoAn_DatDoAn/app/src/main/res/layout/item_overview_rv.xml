<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:gravity="center"
        android:background="@drawable/corner_item_overview_rv"
        android:textColor="#fff"
        android:id="@+id/tvpercent_piechart"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:layout_width="60dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tvloaihang_piechart"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvpercent_piechart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="8sp"
        android:id="@+id/tvtien_piechart"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/tvloaihang_piechart"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#104d4a4a"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>