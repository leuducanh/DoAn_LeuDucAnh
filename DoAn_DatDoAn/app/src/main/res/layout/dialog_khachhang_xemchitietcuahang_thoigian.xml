<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:background="@drawable/corner_khachhang_xemchitietcuahang_thoigian"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:text="Tạm ngưng phục vụ"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="Chưa đến giờ hoặc đã quá thời gian phục vụ."
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvquagio_khachhang_xemchitietcuahangfragment"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:layout_marginTop="5dp"
        android:text="qwertyuu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#20000000"
        android:layout_width="match_parent"
        android:layout_height="1sp" />
    <TextView
        android:textStyle="italic"
        android:id="@+id/tvtimdiadiemkhac_xemchitietcuahangfragment"
        android:textColor="#282db9"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:text="Tìm địa điểm khác"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="25sp" />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#20000000"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginBottom="5dp"/>
</LinearLayout>
</LinearLayout>